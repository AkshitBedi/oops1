#include <iostream>
using namespace std;

int main() {
    double a, b;
    char op;
    cout << "Enter expression (a + b): ";
    cin >> a >> op >> b;

    switch (op) {
        case '+': cout << "Result = " << a + b << endl; break;
        case '-': cout << "Result = " << a - b << endl; break;
        case '*': cout << "Result = " << a * b << endl; break;
        case '/':
            if (b != 0) cout << "Result = " << a / b << endl;
            else cout << "Division by zero not allowed.\n";
            break;
        default: cout << "Invalid operator.\n";
    }
    return 0;
}
